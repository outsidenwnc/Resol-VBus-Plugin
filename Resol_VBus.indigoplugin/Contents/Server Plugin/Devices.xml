<?xml version="1.0"?>
<Devices>
	<!-- Define some devices -->
	<Device type="custom" id="station">
		<Name>Resol Gateway IP Address</Name>
		<ConfigUI>
			<Field id="address" type="textfield">
				<Label>Enter a station ID:</Label>
			</Field>
		</ConfigUI>
		<UiDisplayStateId>temperatureString</UiDisplayStateId>
		<States>
			<State id="tempsensor1">
				<ValueType>Number</ValueType>
				<TriggerLabel>Temperature Sensor 1</TriggerLabel>
				<ControlPageLabel>Temperature Sensor 1</ControlPageLabel>
			</State>
			<State id="tempsensor2">
				<ValueType>Number</ValueType>
				<TriggerLabel>Temperature Sensor 2</TriggerLabel>
				<ControlPageLabel>Temperature Sensor 2</ControlPageLabel>
			</State>
			<State id="tempsensor3">
				<ValueType>Number</ValueType>
				<TriggerLabel>Temperature Sensor 3</TriggerLabel>
				<ControlPageLabel>Temperature Sensor 3</ControlPageLabel>
			</State>
			<State id="tempsensor4">
				<ValueType>Number</ValueType>
				<TriggerLabel>Temperature Sensor 4</TriggerLabel>
				<ControlPageLabel>Temperature Sensor 4</ControlPageLabel>
			</State>
			</State>
			<State id="pumpsprelay1">
				<ValueType>Number</ValueType>
				<TriggerLabel>Pump Speed Relay 1</TriggerLabel>
				<ControlPageLabel>Pump Speed Relay 1</ControlPageLabel>
			</State>
		    <State id="pumpsprelay2">
				<ValueType>Number</ValueType>
				<TriggerLabel>Pump Speed Relay 2</TriggerLabel>
				<ControlPageLabel>Pump Speed Relay 2</ControlPageLabel>
			</State>
			<State id="sep0">
				<ValueType>Separator</ValueType>
			</State>
		</States>
	</Device>
</Devices>
